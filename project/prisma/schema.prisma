model User {
  id       Int    @id @default(autoincrement())
  username String @unique
  password String
  cart Cart?
}

model Cart {
  id         Int      @id @default(autoincrement())
  user       User     @relation(fields: [userId], references: [id])
  userId     Int @unique
  cartItems  CartItem[] 
}

model CartItem {
  id            Int       @id @default(autoincrement())
  cartId        Int
  productName   String    
  productPrice  Float   
  productImage  String?   
  quantity      Int       
  cart          Cart      @relation(fields: [cartId], references: [id]) 
}

